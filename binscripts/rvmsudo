#!/usr/bin/env bash

args=()
while [[ $# -gt 0 ]] ; do
  token="${1}" ; shift
  case "${token}" in
    --trace)
      export PS4='+[${BASH_SOURCE}] : ${LINENO} : ${FUNCNAME[0]:+${FUNCNAME[0]}() $ }'
      set -o xtrace
      shift
      ;;

    --verbose)
      set -o verbose
      shift
      ;;
  *)
    args=("${args[@]}" "$token")
    ;;
  esac
done

prefix="PATH='$PATH'"
[[ -n "${GEM_HOME:-}" ]] && prefix="GEM_HOME='$GEM_HOME' $prefix"
[[ -n "${GEM_PATH:-}" ]] && prefix="GEM_PATH='$GEM_PATH' $prefix"

exec sudo /usr/bin/env ${prefix} ${args[@]}
