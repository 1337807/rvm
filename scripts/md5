#!/usr/bin/env bash

if [[ "$rvm_trace_flag" -eq 1 ]] ; then set -x ; export rvm_trace_flag ; fi

file="$1"
md5="$2"

if [[ "Linux" = "$(uname)" ]] ; then
  command="md5sum"
  field="0"
elif [[ "Darwin" = "$(uname)" ]] ; then
  command="/sbin/md5"
  field="NF"
fi

file_md5=$($command "$file" | awk "{print \$$field}")

if [[ "$file_md5" = "$md5" ]] ; then
  exit 0
else
  exit 1
fi
