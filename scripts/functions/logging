#!/usr/bin/env bash

# Logging functions

# Detect wheter or not the shell is interactive by asking if stdout is a terminal
if [[ -t 1 ]]
then
  eval "rvm_log()   { printf \"%s\" \"\$(tput setaf 2)\$*\$(tput sgr0)\n\" ; }"
  eval "rvm_debug() { printf \"%s\" \"\$(tput setaf 5)DEBUG: \$*\$(tput sgr0)\n\" ; }"
  eval "rvm_warn()  { printf \"%s\" \"\$(tput setaf 3)WARN: \$*\$(tput sgr0)\n\" ; }"
  eval "rvm_error() { printf \"%s\" \"\$(tput setaf 1)ERROR: \$*\$(tput sgr0)\n\" >&2 ; }"
else
  rvm_log()   { printf "%s" "$*\n" ; }
  rvm_debug() { printf "%s" "DEBUG: $*\n" ; }
  rvm_warn()  { printf "%s" "WARN: $*\n" ; }
  rvm_error() { printf "%s" "ERROR: $*\n" >&2 ; }
fi
